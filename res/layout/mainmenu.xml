<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="10dp"
    android:paddingTop="60dp"
    android:paddingBottom="60dp"
    android:orientation="vertical">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:text="@string/label_selectOption"
	        android:textSize="18.0sp"
	        android:textStyle="bold" />

		<Button
		    android:id="@+id/mainMenuButton_createHunt"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10dp"
		    android:gravity="center"
		    android:text="@string/label_newgame"
		    android:textColor="#FFFFFF"
		    android:textSize="16sp"
		    android:textStyle="normal" />

		<Button
		    android:id="@+id/mainMenuButton_myHunts"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10dp"
		    android:gravity="center"
		    android:text="@string/label_myhunts"
		    android:textColor="#FFFFFF"
		    android:textSize="16sp"
		    android:textStyle="normal" />

		<Button
            android:id="@+id/mainMenuButton_huntsPlaying"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/label_huntsiamplaying"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="normal" />
</LinearLayout>