<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:orientation="vertical"
    android:scrollbarStyle="insideInset"
    android:scrollbars="vertical" >

    <EditText
        android:id="@+id/textbox_Title"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:hint="Title" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/select_players"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:padding="5dip"
                android:text="Select Players" />

            <ListView
                android:id="@+id/playerList"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:paddingLeft="40dp"
                android:scrollbarStyle="insideInset" >

            </ListView>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="244dp"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <!-- <ExpandableListView -->
    <!-- android:id="@+id/expandableListView1" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="52dp" > -->
    <!-- </ExpandableListView> -->

    <EditText
        android:id="@+id/editStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_startDate"
        android:inputType="date"
        android:onClick="showStartDatePickerDialog" />

    <EditText
        android:id="@+id/editStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_startTime"
        android:inputType="time"
        android:onClick="showStartTimePickerDialog" />

    <EditText
        android:id="@+id/editEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_endDate"
        android:inputType="date"
        android:onClick="showEndDatePickerDialog" />

    <EditText
        android:id="@+id/editEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_endTime"
        android:inputType="date"
        android:onClick="showEndTimePickerDialog" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/add_items"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="Add Items" />    
            
            <ListView
                android:id="@+id/itemList"
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:layout_marginLeft="120dp"
                android:paddingLeft="10dp" >

            </ListView>        
    </RelativeLayout>
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="beginning"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp" >

            <Button
                android:id="@+id/createhuntButton_cancel"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_cancel" />

            <Button
                android:id="@+id/createhuntButton_CreateHunt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="@string/create_hunt_button" />
        </TableRow>
    </TableLayout>

</LinearLayout>